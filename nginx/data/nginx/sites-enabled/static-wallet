server {
  listen 80 default_server;
  server_name wallet wallet.*;

  access_log /var/log/nginx/wallet.http.access.log;
  error_log /var/log/nginx/wallet.http.error.log;

  include /etc/nginx/customize/4xx_pages.conf;
  include /etc/nginx/customize/default_favicon.conf;

  root /var/www/wallet;
  index index.html;

  location / {
    try_files $uri $uri/ =404;
  }
}
