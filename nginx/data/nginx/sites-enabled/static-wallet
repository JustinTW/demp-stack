# app = wallet

server {
  listen 80 default_server;
  server_name wallet wallet.*;

  access_log /var/log/nginx/wallet.http.access.log;
  error_log /var/log/nginx/wallet.http.error.log;

  error_page  403  /error_403.html;
    location = /error_403.html {
    root   /usr/share/nginx/html/pages;
  }

  root /var/www/wallet;
  index index.html;

  location / {
    try_files $uri $uri/ =404;
  }
}
