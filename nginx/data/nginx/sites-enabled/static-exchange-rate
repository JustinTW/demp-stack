# app = exchange-rate

server {
  listen 80;
  server_name exchange-rate exchange-rate.*;

  access_log /var/log/nginx/exchange-rate.http.access.log;
  error_log /var/log/nginx/exchange-rate.http.error.log;

  error_page  403  /error_403.html;
    location = /error_403.html {
    root   /usr/share/nginx/html/pages;
  }

  root /var/www/exchange-rate;
  index index.html;

  location / {
    default_type application/json;
    add_header 'Access-Control-Allow-Origin' '*';
    add_header 'Access-Control-Allow-Methods' 'GET, POST, OPTIONS PUT';
    try_files $uri $uri/ =404;
  }
}
