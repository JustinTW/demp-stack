# proxy type: force-long-http-andssl-url

# replace keyword below
# app = account
# domain = moxa.online
# internal_host = internal_account_http_hosts

server {
  listen 80;
  listen 443 ssl;
  server_name account;

  include /etc/nginx/customize-conf/_cert.moxa.online.conf;
  include /etc/nginx/customize-conf/_ssl.conf;

  access_log /var/log/nginx/account.301.access.log;
  error_log /var/log/nginx/account.301.error.log;
  return 301 $scheme://$server_name.moxa.online$request_uri;
}

server {
  listen 80;
  server_name account.moxa.online;
  access_log /var/log/nginx/account.http.access.log;
  error_log /var/log/nginx/account.http.error.log;

  error_page  403  /error_403.html;
    location = /error_403.html {
    root   /usr/share/nginx/html/pages;
  }

  location / {
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header X-Forwarded-For $remote_addr;
    proxy_set_header X-Forwarded-Host $server_name;
    proxy_http_version 1.1;
    proxy_pass_request_headers on;
    proxy_set_header Connection "keep-alive";
    proxy_pass http://internal_account_http_hosts;
  }
}

server {
  listen 443 ssl;
  server_name account.moxa.online;

  include /etc/nginx/customize-conf/_cert.moxa.online.conf;
  include /etc/nginx/customize-conf/_ssl.conf;

  access_log /var/log/nginx/account.moxa.online.https.access.log;
  error_log /var/log/nginx/account.moxa.online.https.error.log;

  error_page  403  /error_403.html;
    location = /error_403.html {
    root   /usr/share/nginx/html/pages;
  }

  location / {
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header X-Forwarded-For $remote_addr;
    proxy_set_header X-Forwarded-Host $server_name;
    proxy_http_version 1.1;
    proxy_pass_request_headers on;
    proxy_set_header Connection "keep-alive";
    proxy_pass http://internal_account_http_hosts;
  }
}
