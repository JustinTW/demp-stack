# proxy type: allow-short-and-long-url

# replace keyword below
# app = gitlab
# domain = moxa.online
# inter_host = internal_gitlab_http_hosts

server {
  listen 80;
  server_name gitlab;

  access_log /var/log/nginx/gitlab.http.access.log;
  error_log /var/log/nginx/gitlab.http.error.log;

  error_page  403  /error_403.html;
    location = /error_403.html {
    root   /usr/share/nginx/html/pages;
  }

  location / {
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header X-Forwarded-For $remote_addr;
    proxy_set_header X-Forwarded-Host $server_name;
    proxy_http_version 1.1;
    proxy_pass_request_headers on;
    proxy_set_header Connection "keep-alive";
    proxy_pass http://internal_gitlab_http_hosts;
  }
}

server {
  listen 443 ssl;
  server_name gitlab;

  include /etc/nginx/customize-conf/_cert.moxa.online.conf;
  include /etc/nginx/customize-conf/_ssl.conf;

  access_log /var/log/nginx/gitlab.https.access.log;
  error_log /var/log/nginx/gitlab.https.error.log;

  error_page  403  /error_403.html;
    location = /error_403.html {
    root   /usr/share/nginx/html/pages;
  }

  location / {
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header X-Forwarded-For $remote_addr;
    proxy_set_header X-Forwarded-Host $server_name;
    proxy_http_version 1.1;
    proxy_pass_request_headers on;
    proxy_set_header Connection "keep-alive";
    proxy_pass http://internal_gitlab_http_hosts;
  }

}

server {
  listen 80;
  server_name gitlab.moxa.online;

  access_log /var/log/nginx/gitlab.moxa.online.http.access.log;
