# proxy type: allow-http-url

# replace keyword below
# app = ppga
# inter_host = internal_ppga_http_hosts

server {
  listen 80;
  server_name ppga ppga.*;

  access_log /var/log/nginx/ppga.http.access.log;
  error_log /var/log/nginx/ppga.http.error.log;

  error_page  403  /error_403.html;
    location = /error_403.html {
    root   /usr/share/nginx/html/pages;
  }

  location / {
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header X-Forwarded-For $remote_addr;
    proxy_set_header X-Forwarded-Host $server_name;
    proxy_http_version 1.1;
    proxy_pass_request_headers on;
    proxy_set_header Connection "keep-alive";
    proxy_pass http://internal_ppga_http_hosts;
  }
}
